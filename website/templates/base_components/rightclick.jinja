<style>
    .context-menu {
        position: absolute;
        text-align: center;
        border-radius: 5px;
        border: 1px solid black;
        padding: 5px;
        width: 210px;
        height: 250px;
    }

</style>
<div class="context-menu" id="contextMenu"
     style="display: none">
    <div aria-label="Toolbar with button groups" class="btn-toolbar mb-3" role="toolbar">
        <div aria-label="Top controls" class="btn-group" role="group">

            <button class="btn btn-outline-secondary" onclick="window.history.back()"><span
                    class="material-icons md-24">
            arrow_back</span></button>
            <button class="btn btn-outline-secondary" onclick="window.history.forward()"><span
                    class="material-icons md-24">
                arrow_forward</span></button>
            <button class="btn btn-outline-secondary" onclick="location.reload();"><span class="material-icons md-24">refresh</span>
            </button>
            <button class="btn btn-outline-secondary" onclick="location.reload();"><span class="material-icons md-24">star</span>
            </button>
        </div>
        <div class="btn-group-vertical">
            {% if current_user.is_authenticated %}
            <button class="btn btn-outline-secondary" onclick="window.location.href = '/signout'">Sign Out</button>
            {% else %}
            <button class="btn btn-outline-secondary" onclick="window.location.href = '/signin'">Sign In</button>
            <button class="btn btn-outline-secondary" onclick="window.location.href = '/signup'">Sign Up</button>
            {% endif %}
        </div>
    </div>
</div>
<script>
    document.onclick = hideMenu;
    document.oncontextmenu = showMenu;
    contextMenu = document.getElementById("contextMenu");

    function hideMenu() {
        contextMenu.style.display = "none"
    }

    function showMenu(e) {
        e.preventDefault();

        if (contextMenu.style.display === "block")
            hideMenu();
        else {
            contextMenu.style.display = 'block';
            contextMenu.style.left = e.pageX + "px";
            contextMenu.style.top = e.pageY + "px";
        }
    }

</script>
